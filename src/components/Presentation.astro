---
interface Props {
  menName: string;
  womenName: string;
  subTitle?: string;
  footer?: string;
}

const { menName, womenName, subTitle, footer } = Astro.props;
---

<section class="container-presentation">
  <div class="container-presentation__location">
    <h1 class="presentation__hero"><span>NOS</span><strong>CASAMOS</strong></h1>
    <h2 class="presentation__husbans--name">{`${menName} y ${womenName}`}</h2>
    <footer class="containe-footer">
      <h3 class="footer__title">{subTitle}</h3>
      <p class="footer__text">{footer}</p>
    </footer>
  </div>
</section>

<style>
  .container-presentation {
    color: hsl(0, 0%, 91%);
  }

  .container-presentation__location {
    display: flex;
    flex-direction: column;
    padding: 25vh 10vh;
  }

  .presentation__hero {
    display: flex;
    position: relative;
    align-items: center;
    flex-direction: column;
  }

  .presentation__hero span {
    top: 20px;
    position: absolute;
    display: inline-block;
    font-size: 2.5vw;
    letter-spacing: 8px;
    font-family: "Jura", system-ui;
  }

  .presentation__hero strong {
    display: inline-block;
    font-size: 12.5vw;
    line-height: 1.2;
    height: auto;
    font-weight: 100;
    font-family: "Amiri Quran", system-ui;
  }

  .presentation__husbans--name {
    font-size: 2vw;
    letter-spacing: 8px;
    text-align: center;
    margin-bottom: 110px;
    font-family: "Jura", system-ui;
  }

  .containe-footer {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .footer__title {
    margin: 0;
    font-size: 3vw;
    letter-spacing: 4px;
    font-family: "Herr Von Muellerhoff", system-ui, cursive;
  }

  .footer__text {
    font-size: 2vw;
    letter-spacing: 3px;
    font-weight: lighter;
    font-family: "Jura", system-ui;
  }

  @media screen and (max-width: 768px) {
    .container-presentation {
    }

    .container-presentation__location {
      margin-top: 20vh;
      padding: 0;
    }

    .presentation__hero span {
      top: 0;
      font-size: 3.5vw;
    }

    .presentation__hero strong {
      font-size: 15.5vw;
    }

    .presentation__husbans--name {
      font-size: 4vw;
      letter-spacing: 6px;
      margin-bottom: 200px;
    }

    .footer__title {
      font-size: 6vw;
    }

    .footer__text {
      font-size: 3vw;
    }
  }
</style>
