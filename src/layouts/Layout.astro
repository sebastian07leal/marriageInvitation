  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  *,
  ::after,
  ::before {
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background-image: url("/public/images/presentation.png");
  }

  body {
    margin: 0;
  }

  a {
    text-decoration: none;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  @keyframes palpite {
    from {
      transform: none;
    }

    50% {
      transform: scale(1.1);
    }

    to {
      transform: none;
    }
  }
</style>
